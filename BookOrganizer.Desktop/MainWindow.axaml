<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BookOrganizer.Desktop.ViewModels"
        xmlns:views="using:BookOrganizer.Desktop.Views"
        xmlns:svc="using:BookOrganizer.Desktop.Services"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="BookOrganizer.Desktop.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="BookOrganizer" Width="1200" Height="700"
        MinWidth="800" MinHeight="500">

    <!-- Native menu (macOS system menu bar) -->
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenu>
                    <NativeMenuItem Header="Open Library..." Click="OnOpenLibrary" Gesture="Cmd+O" />
                    <NativeMenuItem Header="Settings..." Click="OnOpenSettings" Gesture="Cmd+," />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Library">
                <NativeMenu>
                    <NativeMenuItem Header="Refresh" Click="OnRefreshLibrary" Gesture="Cmd+R" />
                    <NativeMenuItem Header="Scan Metadata" Click="OnScanMetadata" />
                    <NativeMenuItem Header="Export NFO" Click="OnExportNfo" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Reorganize" Click="OnReorganize" />
                    <NativeMenuItem Header="Verify Library" Click="OnVerifyLibrary" />
                    <NativeMenuItem Header="Detect Synonyms" Click="OnDetectSynonyms" />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Audiobookshelf">
                <NativeMenu>
                    <NativeMenuItem Header="Publish All" Click="OnPublishAll" />
                    <NativeMenuItem Header="Check Duplicates" Click="OnCheckAbsDuplicates" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Refresh ABS Library" Click="OnRefreshAbsLibrary" />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Help">
                <NativeMenu>
                    <NativeMenuItem Header="About BookOrganizer" Click="OnShowAbout" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <DockPanel>
        <!-- In-window menu bar (Windows/Linux only, hidden on macOS) -->
        <Menu DockPanel.Dock="Top" x:Name="InWindowMenu">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Library..." Command="{Binding OpenLibraryCommand}"
                          InputGesture="Ctrl+O" />
                <MenuItem Header="_Settings..." Command="{Binding OpenSettingsCommand}"
                          InputGesture="Ctrl+OemComma" />
                <Separator />
                <MenuItem Header="E_xit" Click="OnExitClick"
                          InputGesture="Alt+F4" />
            </MenuItem>
            <MenuItem Header="_Library">
                <MenuItem Header="_Refresh" Command="{Binding Library.LoadLibraryCommand}"
                          InputGesture="F5" />
                <MenuItem Header="Scan _Metadata" Command="{Binding Library.ScanMetadataCommand}" />
                <MenuItem Header="Export _NFO" Command="{Binding Library.ExportNfoCommand}" />
                <Separator />
                <MenuItem Header="R_eorganize" Command="{Binding Library.ReorganizeCommand}" />
                <MenuItem Header="_Verify Library" Command="{Binding Library.VerifyLibraryCommand}" />
                <MenuItem Header="_Detect Synonyms" Command="{Binding Library.DetectSynonymsCommand}" />
            </MenuItem>
            <MenuItem Header="_Audiobookshelf">
                <MenuItem Header="_Publish All" Command="{Binding Library.PublishAllCommand}" />
                <MenuItem Header="_Check Duplicates" Command="{Binding Library.CheckAbsDuplicatesCommand}" />
                <Separator />
                <MenuItem Header="_Refresh ABS Library" Command="{Binding Library.AbsLibraryVm.RefreshCommand}" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About BookOrganizer" Command="{Binding ShowAboutCommand}" />
            </MenuItem>
        </Menu>

        <!-- Status line at bottom -->
        <Border DockPanel.Dock="Bottom"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,4">
            <Grid ColumnDefinitions="*,Auto">
                <!-- ABS server status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                    <Panel Width="8" Height="8" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8" Fill="LimeGreen" IsVisible="{Binding AbsConnected}" />
                        <Ellipse Width="8" Height="8" Fill="Gray" IsVisible="{Binding !AbsConnected}" />
                    </Panel>
                    <TextBlock Text="{Binding AbsStatusText}"
                               FontSize="11"
                               Opacity="0.7"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Publish queue status bar -->
        <Border DockPanel.Dock="Bottom"
                DataContext="{Binding PublishQueue}"
                x:DataType="svc:PublishQueueService"
                IsVisible="{Binding ShowStatus}"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,6">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <ProgressBar Grid.Column="0"
                             IsIndeterminate="True"
                             IsVisible="{Binding IsPublishing}"
                             Width="80" Height="12"
                             Margin="0,0,12,0" />
                <TextBlock Grid.Column="1"
                           Text="{Binding ProgressText}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis" />
                <Button Grid.Column="2"
                        Content="Cancel"
                        IsVisible="{Binding IsPublishing}"
                        Command="{Binding CancelCommand}"
                        Padding="8,2"
                        Margin="8,0" />
                <Button Grid.Column="3"
                        Content="Dismiss"
                        IsVisible="{Binding !IsPublishing}"
                        Command="{Binding DismissCommand}"
                        Padding="8,2" />
            </Grid>
        </Border>

        <!-- Main content: Library view -->
        <views:LibraryView DataContext="{Binding Library}" />
    </DockPanel>

</Window>
