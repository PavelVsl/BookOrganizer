<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BookOrganizer.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="BookOrganizer.Desktop.Views.ScanView"
             x:DataType="vm:ScanViewModel">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Padding="12,8" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <TextBlock Grid.Column="0" Text="Source:" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Grid.Column="1" Text="{Binding SourcePath}" Watermark="Path to unorganized audiobooks..."
                         Margin="0,0,8,0" />
                <Button Grid.Column="2" Content="Scan" Command="{Binding ScanCommand}"
                        IsEnabled="{Binding !IsScanning}" Margin="0,0,4,0" />
                <Button Grid.Column="3" Content="Cancel" Command="{Binding ScanCancelCommand}"
                        IsEnabled="{Binding IsScanning}" />
            </Grid>
        </Border>

        <!-- Progress -->
        <StackPanel Grid.Row="1" Margin="12,8" Spacing="4"
                    IsVisible="{Binding IsScanning}">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock Text="{Binding DirectoriesScanned, StringFormat='Directories: {0}'}" />
                <TextBlock Text="{Binding AudiobooksFound, StringFormat='Audiobooks: {0}'}" />
                <TextBlock Text="{Binding AudioFilesFound, StringFormat='Files: {0}'}" />
            </StackPanel>
            <TextBlock Text="{Binding CurrentDirectory}" FontSize="11"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextTrimming="CharacterEllipsis" />
        </StackPanel>

        <!-- Results DataGrid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Results}" IsReadOnly="True"
                  Margin="8" GridLinesVisibility="Horizontal" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*" />
                <DataGridTextColumn Header="Files" Binding="{Binding FileCount}" Width="80" />
                <DataGridTextColumn Header="Size (MB)" Binding="{Binding SizeMb, StringFormat='{}{0:0.#}'}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status bar -->
        <Border Grid.Row="3" Padding="12,4" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding StatusText}" FontSize="12"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        </Border>
    </Grid>

</UserControl>
